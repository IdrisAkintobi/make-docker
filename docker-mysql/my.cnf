# my.cnf
# This file can be used to customize the MySQL server configuration.
# For more information, see the MySQL documentation:
# https://dev.mysql.com/doc/refman/8.0/en/option-files.html

[mysqld]
# Set the port number for MySQL server
port = 3306

# Set the default timezone for the server.
# Use 'SYSTEM' to use the system's timezone, or a specific offset like '+00:00' or named timezone like 'America/New_York'.
# For a list of supported timezones, query `SELECT * FROM mysql.time_zone_name;` inside MySQL.
default_time_zone = '+00:00'

# Set the character set for the server
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Enable general query log (useful for debugging, disable in production)
# general_log = 1
# general_log_file = /var/log/mysql/mysql.log

# Enable slow query log (useful for performance tuning)
# slow_query_log = 1
# slow_query_log_file = /var/log/mysql/mysql-slow.log
# long_query_time = 1 # Log queries that take longer than 1 second

# Set maximum connections
max_connections = 150

# Set buffer pool size for InnoDB (adjust based on available RAM)
innodb_buffer_pool_size = 128M

# Set transaction isolation level
transaction_isolation = READ-COMMITTED

[client]
# Set the default character set for client connections
default-character-set = utf8mb4

[mysql]
# Set the default character set for MySQL client
default-character-set = utf8mb4
